<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yboweb.bestmovie.androidnavigationdrawerexample" >
    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_CONTACTS"/>




    <application

        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"


        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <provider android:authorities="@string/facebook_app_id"
            android:name="com.facebook.FacebookContentProvider"
            android:exported="true" />

        <activity

            android:name="com.yboweb.bestmovie.AndroidNavDrawerActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"
                    />


                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            android:screenOrientation="portrait"

        </activity>
        <activity
            android:name="com.yboweb.bestmovie.ScrollingActivity"
            android:label="Movie details"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name="com.yboweb.bestmovie.PlayVideo"
            android:label="@string/title_activity_you_tube"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name="com.yboweb.bestmovie.GridViewActivity"
            android:label="Grid View"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name="com.yboweb.bestmovie.DetailsActivity"
            android:label="Detailed Image"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name="com.yboweb.bestmovie.ActorScrollingActivity"
            android:label="@string/title_activity_actor_scrolling"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity android:name="com.yboweb.bestmovie.SearchableActivity" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH"/>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable"/>
        </activity>
    </application>

</manifest>
